# Agentis - Environment Variables Example
# Copy this file to .env and fill in your values

# Required - Anthropic API Key 
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional - Default LLM Model
DEFAULT_MODEL=claude-3-5-sonnet-20240620

# Optional - OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here

# Optional - Tavily Search API Key
TAVILY_API_KEY=your_tavily_key_here

# Optional - Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Twitter Bot Configuration
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# Twitter API v2 credentials (optional, enables polls and enhanced features)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET_KEY=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_twitter_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Monitoring options
MONITOR_KEYWORDS=crypto,bitcoin,ethereum,AI,solana,machine learning
MONITOR_USERS=
MONITOR_MENTIONS=true
MONITOR_REPLIES=true
AUTO_REPLY=false
STARTUP_TWEET=true

# Session persistence
PERSIST_COOKIES=true
COOKIES_PATH=./data/twitter-cookies/twitter-cookies.json

# Advanced options
POLL_INTERVAL=60000
MAX_RETRIES=3
RETRY_DELAY=2000
USE_GROK=false
ADD_POLL=false
DEBUG_TWITTER=false

# Pinecone Vector Database (required for crypto-twitter agent)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=crypto-agent-memory
PINECONE_NAMESPACE=crypto-analysis

# Crypto Agent Configuration
CONTENT_CATEGORIES=market_analysis,technical,news,prediction
PREFERRED_TOPICS=AI tokens,crypto market trends,solana AI projects
PREFERRED_POSTING_TIMES=9,13,17,21
TWEETS_PER_DAY=4
ENABLE_AUTO_RESPONSES=false
