# Anthropic API Key (Required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default model to use (Optional, defaults to "claude-3-5-sonnet-20240620")
DEFAULT_MODEL=claude-3-5-sonnet-20240620

# Optional configurations 
LOG_LEVEL=info # debug, info, warn, error
ENABLE_MEMORY_PERSISTENCE=false
MEMORY_STORAGE_PATH=./data/memory

# Platform connectors
# DISCORD_BOT_TOKEN=your_discord_bot_token

# Twitter credentials (using browser authentication)
# Required for all Twitter functionality
# TWITTER_USERNAME=your_twitter_username
# TWITTER_PASSWORD=your_twitter_password
# TWITTER_EMAIL=your_twitter_email # Optional, needed if Twitter requires email verification

# Twitter API credentials (optional, for data fetching only)
# Not needed for posting tweets - tweets are ALWAYS posted using browser automation
# to avoid Twitter API restrictions on automated posting
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET_KEY=your_twitter_api_secret
# TWITTER_ACCESS_TOKEN=your_twitter_access_token
# TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_secret

# Twitter bot configuration (optional)
# MONITOR_KEYWORDS=ai,machinelearning,ethics
# MONITOR_USERS=user1,user2,user3
# AUTO_REPLY=false
# POLL_INTERVAL=60000
# STARTUP_TWEET=false
# TWITTER_HEADLESS=true # Set to false to see the browser window for debugging