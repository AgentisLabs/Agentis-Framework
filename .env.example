# Agentis Framework - Environment Variables Example
# Copy this file to .env and fill in your values

# Required - LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional - Default LLM Model
DEFAULT_MODEL=claude-3-5-sonnet-20240620

# Optional - Tavily Search API Key (for web search tool)
TAVILY_API_KEY=your_tavily_api_key_here

# Optional - Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Twitter Bot Configuration
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# Twitter API v2 credentials (optional, enables polls and enhanced features)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET_KEY=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Twitter Monitoring options
MONITOR_KEYWORDS=keyword1,keyword2,keyword3
MONITOR_USERS=user1,user2
MONITOR_MENTIONS=true
MONITOR_REPLIES=true
AUTO_REPLY=true
STARTUP_TWEET=false

# Twitter Session persistence
PERSIST_COOKIES=true
COOKIES_PATH=./data/twitter-cookies/twitter-cookies.json

# Twitter Advanced options
POLL_INTERVAL=60000
MAX_RETRIES=3
RETRY_DELAY=2000
USE_GROK=false
ADD_POLL=false
DEBUG_TWITTER=false

# Pinecone Vector Database (for enhanced memory)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_INDEX=your_pinecone_index
PINECONE_NAMESPACE=your_pinecone_namespace

# Agent Configuration for Twitter
CONTENT_CATEGORIES=category1,category2,category3
PREFERRED_TOPICS=topic1,topic2,topic3
PREFERRED_POSTING_TIMES=9,13,17,21
TWEETS_PER_DAY=4
ENABLE_AUTO_RESPONSES=true

# Discord Bot Configuration
# Regenerate this token in the Discord Developer Portal > Bot > Reset Token
BOT_TOKEN=your_discord_bot_token