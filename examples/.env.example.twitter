# Required Anthropic API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model to use
DEFAULT_MODEL=claude-3-5-sonnet-20240620

# Required Twitter credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# Optional Twitter API credentials (for additional features)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET_KEY=your_twitter_api_secret_key
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# Twitter bot configuration
MONITOR_KEYWORDS=ai,machine learning,claude,anthropic
MONITOR_USERS=sama,AnthropicAI,sama_shah
AUTO_REPLY=false
POLL_INTERVAL=60000

# Startup options
STARTUP_TWEET=false
SEARCH_ON_STARTUP=true
SEARCH_QUERY=anthropic
GET_TRENDS=true

# Grok integration (Twitter's AI assistant)
ASK_GROK=false
GROK_QUESTION=What's the latest news about AI?

# Logging
LOG_LEVEL=info